package contenitoreStringhe;

public class RandomReader extends Thread {
	private Contenitore c;
	private int id;

	private static final int numLetture = 10;

	public RandomReader(int id, Contenitore c) {
		super();
		this.id = id;
		this.c = c;
	}

	public void run() {
		int inserimentiEffettuati = 0;
		int currentId = 0;
		while (inserimentiEffettuati < numLetture) {
			try {
				currentId = c.inserisci(getName() + inserimentiEffettuati);
				inserimentiEffettuati++;
				System.out.println("Utente " + id + "effettuato " + inserimentiEffettuati + "esimo inserimento");
			} catch (Pieno e) {
				e.printStackTrace();
				System.out.println("Utente " + id + " " + inserimentiEffettuati + "esimo inserimento fallito");
			}
			try {
				String l = c.recupera(currentId);
				System.out.println(
						"Utente " + id + "effettuata lettura di stringa " + l + " con identificativo " + currentId);
				c.cancella(currentId);
			} catch (Inesistente e) {
				// TODO Auto-generated catch block
				e.printStackTrace();
			}
			try {
				Thread.sleep(6000 + (long) (Math.random() * 10000));
			} catch (InterruptedException e) {
				// TODO Auto-generated catch block
				e.printStackTrace();
			}
		}
	}
}
